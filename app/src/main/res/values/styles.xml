<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#673AB7</item>
        <item name="colorAccent">#9C27B0</item>
        <item name="android:navigationBarColor">@color/overlayBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpanededAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
